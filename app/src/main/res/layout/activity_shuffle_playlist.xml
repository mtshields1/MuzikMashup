<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShufflePlaylistActivity">

    <TextView
        android:id="@+id/titleSong"
        android:layout_width="372dp"
        android:layout_height="123dp"
        android:gravity="center"
        android:text="@string/song"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <ImageButton
        android:id="@+id/nextSongButton"
        android:layout_width="69dp"
        android:layout_height="72dp"
        android:background="#fc0303"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.459"
        app:srcCompat="@android:drawable/ic_media_next"
        android:contentDescription="@string/button_to_play_the_next_song" />

    <ImageButton
        android:id="@+id/previousSongButton"
        android:layout_width="69dp"
        android:layout_height="72dp"
        android:background="#fc0303"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.459"
        app:srcCompat="@android:drawable/ic_media_previous"
        android:contentDescription="@string/button_to_play_the_previous_song" />
</androidx.constraintlayout.widget.ConstraintLayout>